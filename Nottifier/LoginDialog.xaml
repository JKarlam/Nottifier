<Window x:Class="Nottifier.LoginDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:p="clr-namespace:Nottifier.Properties"
        mc:Ignorable="d"
        Title="Nottifier Login" Height="149.019" Width="280.327" WindowStartupLocation="CenterScreen" Icon="Resources/icon.ico">
    <Grid>
        <Label x:Name="label" Content="{x:Static p:Resources.loginText}" HorizontalAlignment="Center" Margin="10,10,8,0" VerticalAlignment="Top" Width="250"/>
        <TextBox x:Name="insertPinBox" HorizontalAlignment="Center" Height="30" Margin="72,41,70,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="130" HorizontalContentAlignment="Center" PreviewTextInput="TextBox_PreviewTextInput" KeyDown="TextBox_KeyDown" FontSize="22"/>
        <Button x:Name="buttonOk" Content="{x:Static p:Resources.acceptButton}" HorizontalAlignment="Center" Margin="98,80,94,0" VerticalAlignment="Top" Width="80" Height="25" FontSize="14" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Click="ButtonOk_Click"/>

    </Grid>
</Window>
